{
  "functions": {
    "api/admin-login.js": {
      "maxDuration": 10
    },
    "api/admin-verify.js": {
      "maxDuration": 10
    },
    "api/admin-logout.js": {
      "maxDuration": 10
    },
    "api/spotify-token.js": {
      "maxDuration": 30
    },
    "api/spotify-refresh.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}